<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CakeBoss"
        tools:targetApi="31">
        <activity
            android:name=".ui.activities.ReceiptActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:label="@string/title_activity_receipt"
            android:theme="@style/Theme.CakeBoss" />
        <activity
            android:name=".ui.activities.ClientActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:label="@string/title_activity_client"
            android:theme="@style/Theme.CakeBoss" />
        <activity
            android:name=".ui.activities.ScheduleActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:label="@string/title_activity_schedule"
            android:theme="@style/Theme.CakeBoss" />
        <activity
            android:name=".ui.activities.IngredientRegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.activities.MainActivity"
            android:label="@string/title_activity_ingredient"
            android:theme="@style/Theme.CakeBoss" />
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CakeBoss">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>